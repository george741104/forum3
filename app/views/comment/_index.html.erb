<h4>Total : <%= @post.comments.count%> Comments</h4>
<h3>Comments:</h3>


  <table class="table">

    <tr>
      <td>#</td>
      <td>Name</td>
      <td>Comment</td>
      <td>Operate</td>
    </tr>
    <% @comments.each do |c|%>
    <tr>
      <td><%=c.id%></td>
      <td><%=c.try(:user).try(:email)%></td>
      <td><%=simple_format(c.content)%></td>
      <td><%=link_to "Edit", post_path(@post, :cid => c) ,:class=>'btn btn-success'%></td>
      <td><%=link_to "Delete", post_comment_path(@post, c),:method=>:delete ,:class=>'btn btn-danger'%></td>
    </tr>
    <%end%>
  </table>
<%= paginate @comments %>

