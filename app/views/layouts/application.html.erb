<!DOCTYPE html>
<html>
<head>
  <title>Forum3</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div id="head">
  <input id="nav-switch" type="checkbox">
  <nav class="navbar header-nav navbar-default head-nav">
      <ul class="nav navbar-nav ">
          <li>
            <% if current_user %>
              <%= image_tag current_user.gravatar_url, :class=>'avatar' %>
            <% end %>
          </li>
          <li ><%=link_to "Index", posts_path %></li>
          <li ><%=link_to "About", about_path %></li>
       </ul>
        <hr class="menu"></hr>
        <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "FB SignIn", user_omniauth_authorize_path(:facebook) %></li>

        <% if current_user %>
          <% if current_user.admin? %>
            <li>
              <%= link_to "Admin", admin_posts_path %>
            </li>
          <% end %>
          <li ><%= link_to('Log Out', destroy_user_session_path, :method => :delete) %> </li>
          <li> <%= link_to('Settings', edit_registration_path(:user)) %> </li>


            <% if current_user.user_profile%>
              <li><%=link_to "Hi! #{current_user.user_profile.first_name}",user_path(current_user)%></li>
            <%elsif current_user.user_profile%>
               <li><%=link_to "Hi! #{current_user.short_name}", user_path(current_user) %></li>
            <% else %>
              <li><%=link_to "Create Profile!", user_path(current_user) %></li>
            <% end %>

        <% else %>
          <li ><%= link_to('Sign Up', new_registration_path(:user)) %> </li>
          <li ><%= link_to('Log In', new_session_path(:user)) %></li>
        <% end %>

        </ul>
  </nav>
  <label for="nav-switch" class="col-xs-12 menu fa fa-bars fa-2x"></label>
</div>

<div class="container">
<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>
<%= yield %>



</div>
</body>
</html>
