<!DOCTYPE html>
<html>
<head>
  <title>Forum3</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="container">

  <nav class="navbar navbar-default">
      <ul class="nav navbar-nav">
          <li ><%=link_to "Index", posts_path %></li>
          <li ><%=link_to "About", about_path %></li>
       </ul>

        <ul class="nav navbar-nav navbar-right">
        <% if current_user %>
          <li ><%= link_to('Log Out', destroy_user_session_path, :method => :delete) %> </li>
          <li ><%= link_to('Settings', edit_registration_path(:user)) %> </li>

          <% if current_user.user_profile.nil? %>
              <li><%=link_to "Hi! #{current_user.email}", user_path(current_user) %></li>

            <%else%>
            <li><%=link_to "Hi! #{current_user.user_profile.first_name}",user_path(current_user)%></li>

          <%end%>

        <% else %>
          <li ><%= link_to('Sign Up', new_registration_path(:user)) %> </li>
          <li ><%= link_to('Log In', new_session_path(:user)) %></li>
        <% end %>



        </ul>
  </nav>
</div>
<div class="container">
<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>
<%= yield %>
</div>
</body>
</html>
