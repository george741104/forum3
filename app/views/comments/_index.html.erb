<hr>
<h4>Total : <%= @post.comments.count%> Comments</h4>

<h3>Comments:</h3>


  <table class="table table-responsive table-hover">

    <tr>
      <td>#</td>
      <td>Name</td>
      <td>Comment</td>
      <td colspan="2">Operate</td>
    </tr>

    <% @comments.each do |c|%>
    <tr id="comment-<%=c.id%>">
      <td><%=c.id%></td>
      <td><%=c.try(:user).try(:email)%></td>
      <td><%=simple_format(c.content)%></td>
      <% if c.user == current_user %>
      <td>
      <%=link_to "Edit", post_path(@post, :cid => c) ,:class=>'btn btn-success'%>
      </td>
      <td>
      <%=link_to "Delete", post_comment_path(@post, c),:remote=>true, :method=>:delete ,:class=>'btn btn-danger'%>
      </td>
      <% end %>
    </tr>
    <%end%>
  </table>
<%= paginate @comments %>

