
<%if @post.logo.exists? %>
      <%= image_tag @post.logo.url, :class=>'img-responsive center-block' %>
    <% else %>
        None
    <% end %>
<div class="panel panel-primary">
  <div class="panel-heading">
    <h2 class="panel-title">Title : <%=@post.title%></h2>
  </div>
  <div class="panel-body ">
    <%= simple_format(@post.content)%>
  </div>
  <div class="panel-footer">
    <%= @post.created_at.to_s(:short) %>
    <% if @user == current_user %>
      <%=link_to "Edit", edit_post_path(@post) ,:class=>'btn btn-default'%>
    <% end %>
  </div>
</div>

<% @post.categories.each do |c| %>
  <span class="glyphicon glyphicon-tags">  <%=c.name%>  |</span>
<%end%>

<hr>
  <%=form_for [@post, @comment],  :class=>'form' do |c|%>
    <%= render :partial => 'comment/form', :locals =>{:c => c}%>
    <%=c.submit "Send", :class => 'btn btn-primary'%>
  <%end%>


<%= render :partial => 'comment/index' %>
